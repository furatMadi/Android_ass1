<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back6"
    android:orientation="vertical"
    tools:context=".IntroActivity2">

    <TextView
        android:id="@+id/intro2Txt"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="18dp"
        android:text="The pH Scale: Measuring Acidity and Basicity One tool scientists use to describe how acidic or basic a solution is is the pH scale. This scale goes from 0 to 14:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/firstTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/acid_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTxt" />

    <TextView
        android:id="@+id/firstTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="1- A pH of 7 is neutral (like pure water)."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/secondTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro2Txt" />

    <TextView
        android:id="@+id/secondTxt"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="459dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="0dp"
        android:text="2- A pH less than 7 means the solution is acidic (lemon juice has a pH around 2)."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thirdTxt"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="174dp"
        android:text="3- A pH greater than 7 means it is basic (household ammonia has a pH about 11)."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/finishBtn"
        app:layout_constraintEnd_toEndOf="@+id/secondTxt"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/secondTxt" />

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Finish"
        android:backgroundTint="#CB8367"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>